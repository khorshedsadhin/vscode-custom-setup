  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "netbeans.jdkhome": "c:\\Program Files\\Java\\jdk-22",
  "netbeans.project.jdkhome": "c:\\Program Files\\Java\\jdk-22",
  "java.jdt.ls.java.home": "c:\\Program Files\\Java\\jdk-22",
  "terminal.integrated.env.windows": {
    "JAVA_HOME": "c:\\Program Files\\Java\\jdk-22",
    "PATH": "c:\\Program Files\\Java\\jdk-22\\bin;${env:PATH}"
  },
  "cmake.showOptionsMovedNotification": false,
  "files.autoSaveDelay": 500,
  "editor.fontSize": 16,
  "editor.fontWeight": "normal",
  "git.openRepositoryInParentFolders": "always",
  "workbench.colorTheme": "Bearded Theme Monokai Black",
  "editor.lineNumbers": "relative"
}
