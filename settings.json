{
	"window.zoomLevel": 1,
	"workbench.sideBar.location": "left",
	"files.autoSave": "afterDelay",
	"editor.lineNumbers": "relative",
	"editor.wordWrap": "on",
	"editor.fontWeight": 400,
	"editor.stickyScroll.enabled": false,
	// ----------------------------------------------------------------------------------------------------------
	// Hides the title bar at the very top of the window
	"window.menuBarVisibility": "toggle", // Hides the menu (File, Edit..) - press Alt to show it

	// Hides the code overview on the right side
	"editor.minimap.enabled": false,

	// Hides the vertical line that marks the print margin
	"editor.rulers": [],

	// Hides the glyph margin (where breakpoints and icons appear)
	"editor.glyphMargin": false,

	// (Optional) Hides the Side Bar (File Explorer) by default.
	// You can still toggle it with Ctrl+B
	"workbench.startupEditor": "newUntitledFile",
	// --- Paste your other settings below this line ---
	// -----------------------------------------------------------------------------------------------------------
	// Explorer Edits
	"material-icon-theme.hidesExplorerArrows": true,
	"workbench.tree.indent": 16,
	"explorer.compactFolders": false,

	//git edits
	"git.decorations.enabled": false,

	"vim.leader": "<Space>",
	"vim.hlsearch": true,
	"vim.useSystemClipboard": true,
	"vim.handleKeys": {
		"<C-c>": false,
		"<C-v>": false,
		"<C-f>": false,
		"<C-j>": false,
		"<C-x>": false,
		"<C-a>": false
	},
	"vim.normalModeKeyBindingsNonRecursive": [
		{ "before": ["<S-h>"], "commands": [":bprevious"] },
		{ "before": ["<S-l>"], "commands": [":bnext"] },
		{ "before": ["leader", "f"], "commands": ["workbench.action.quickOpen"] },
		{
			"before": ["leader", "e"],
			"commands": ["workbench.action.toggleSidebarVisibility"]
		},
		{
			"before": ["leader", "h"],
			"commands": ["workbench.action.focusLeftGroup"]
		},
		{
			"before": ["leader", "l"],
			"commands": ["workbench.action.focusRightGroup"]
		}
	],
	"github.copilot.nextEditSuggestions.fixes": false,
	"code-runner.runInTerminal": true,
	"explorer.confirmDelete": false,
	"git.enableSmartCommit": true,
	"git.confirmSync": false,
	"git.autofetch": true,
	// "editor.tokenColorCustomizations": {
	// 	"comments": "#8F9779"
	// },
	"dart.flutterSdkPath": "F:\\Installed Software\\flutter\\flutter",
	"liveServer.settings.donotShowInfoMsg": true,
	"editor.lineHeight": 1.2,
	"breadcrumbs.enabled": false,
	"workbench.editor.tabSizing": "shrink",
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"prettier.useTabs": true,
	"notebook.defaultFormatter": "esbenp.prettier-vscode",
	"terminal.integrated.defaultProfile.windows": "PowerShell",
	"redhat.telemetry.enabled": true,
	"editor.formatOnSave": true,
	"github.copilot.nextEditSuggestions.enabled": true,
	"github.copilot.enable": {
		"*": false,
		"plaintext": false,
		"markdown": false,
		"scminput": false,
		"javascriptreact": false
	},
	"security.workspace.trust.untrustedFiles": "open",
	"editor.fontFamily": "FiraCode Nerd Font Medium",
	"window.commandCenter": false,
	"workbench.activityBar.location": "bottom",
	"editor.fontSize": 15,

