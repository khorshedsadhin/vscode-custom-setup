	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"scope": [
					"comment",
					"comment.block.documentation",
					"comment.line",
					"comment.block"
				],
				"settings": {
					"foreground": "#6A9955",
					"fontStyle": "italic"
				}
			}
		]
