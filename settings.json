    // "editorGroupHeader.noTabsBackground": "#0F0F0F", // No tabs open background
    // "editorGroupHeader.border": "#0F0F0F", // Tab bar border

    "editorLineNumber.foreground": "#4A4E5D", // Line numbers color
    "editorLineNumber.activeForeground": "#C3CEDA" // Active line number color
